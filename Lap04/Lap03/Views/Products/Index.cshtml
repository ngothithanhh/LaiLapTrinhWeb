@{
    
    Layout = "_MyLayout";
}
@model IEnumerable<Lap03.Models.Products>

<h3>Sản phẩm mới nhất</h3>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3">
            <img src="@product.Image"></img>
            <p>@product.Title</p>

        </div>
       
    }
</div>
@await Component.InvokeAsync("HotProducts")


